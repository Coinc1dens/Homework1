#myLogin{
  margin-bottom: 20rpx;
  background-color: #328EEB;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
/* 1-1 头像图片 */
#myIcon{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
/* 1-2 微信昵称 */
#nickName{
  color: white;
}

.round-click{
  height: 120rpx;
  width: 120rpx;
  background-color: #00838F;
  border-radius: 100%;
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
  
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}
.round-click navigator{
  font-size: 32rpx;
  max-width: 80rpx;
  color: whitesmoke;
  text-align: center;
}
#record-list{
  min-height: 600rpx;
  padding: 15rpx;
}
.list-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid gray;
}
.list-item image{
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  width: 280rpx;
  height: 80rpx;
}
.list-item text{
  margin-top: 10rpx;
  width: 100%;
  line-height: 80rpx;
  font-size: 12pt;
}